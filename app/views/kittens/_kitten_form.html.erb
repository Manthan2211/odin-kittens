<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@kitten) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :age %>
      <%= f.number_field :age, class: 'form-control', in: 1...100 %>

      <%= f.label :cuteness %>
      <%= f.number_field :cuteness, class: 'form-control', in: 1...11 %>

      <%= f.label :softness %>
      <%= f.number_field :softness, class: 'form-control', in: 1...11 %>

       <%= f.label :image %>
      <%= f.file_field :image, class: 'form-control', accept: 'image/png,image/gif,image/jpeg' %>

      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>